<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="moyasar-cdn" type="host">https://cdn.moyasar.com</value>
                <value id="polyfill-io" type="host">https://polyfill.io</value>
                <value id="apple-pay-sdk" type="host">https://applepay.cdn-apple.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="moyasar-cdn" type="host">https://cdn.moyasar.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="moyasar-api" type="host">https://*.moyasar.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
