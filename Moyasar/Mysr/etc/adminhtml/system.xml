<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="1000" translate="label">
            <group id="moyasar_payments" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="1" translate="label">
                <label>Moyasar Payments</label>

                <field id="title" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Payment Title</label>
                    <comment>Edit payment title in checkout page.</comment>
                </field>

                <field id="active" showInDefault="1" showInStore="1" showInWebsite="0" sortOrder="2" translate="label" type="select">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="secret_api_key" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Secret API Key</label>
                </field>

                <field id="publishable_api_key" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Publishable API Key</label>
                </field>

                <field id="generate_invoice" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="5" translate="label" type="select">
                    <label>Invoice Generation</label>
                    <comment>Generating invoice of completed order automatically.</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="auto_void" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="6" translate="label" type="select">
                    <label>Auto Void</label>
                    <comment>Enable Auto void for payments that do not pass currency/amount check.</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="webhook_url" translate="label" type="text" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Webhook URL</label>
                    <frontend_model>Moyasar\Mysr\Admin\DisabledElement</frontend_model>
                </field>

                <field id="webhook_secret" translate="label" type="text" sortOrder="8" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Webhook Secret</label>
                    <frontend_model>Moyasar\Mysr\Admin\DisabledElement</frontend_model>
                </field>

                <field id="methods" translate="label" type="multiselect" sortOrder="9" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Methods</label>
                    <source_model>Moyasar\Mysr\Model\Config\Methods</source_model>
                    <can_be_empty>0</can_be_empty>
                </field>

                <field id="schemes" translate="label" type="multiselect" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Schemes</label>
                    <source_model>Moyasar\Mysr\Model\Config\Schemes</source_model>
                    <can_be_empty>0</can_be_empty>
                </field>
            </group>
        </section>
    </system>
</config>
